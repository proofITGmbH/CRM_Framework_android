<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="stanwood.framework.crm.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CrmApplication"
        android:allowBackup="true"
        android:icon="@mipmap/crm_notification_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="stanwood.framework.crm.app.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="4522f719c7ceecac5149a4bb8a130ff7ca33179c" />

        <service android:name=".notification.CrmNotificationService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>


</manifest>